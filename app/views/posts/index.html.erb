<h1>Listing posts</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
                      method: :delete, data: { confirm: 'Are you very sure you want delete this post?' } %></td>
  </tr>
  <% end %>

  <%= link_to 'New post', new_post_path %>
  <%= form_for :post do |f| %>
  ...
  <% end %>
 
  <%= link_to 'Back', posts_path %>
</table>
